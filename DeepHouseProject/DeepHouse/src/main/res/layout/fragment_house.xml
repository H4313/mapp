<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".HouseActivity$PlaceholderFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewHouse"
        android:src="@drawable/plan_appli"
        android:focusable="false"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chambre 2"
        android:id="@+id/textViewBedroom2"
        android:layout_marginLeft="54dp"
        android:layout_alignTop="@+id/imageViewHouse"
        android:layout_alignLeft="@+id/imageViewHouse"
        android:layout_marginTop="47dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Salon"
        android:id="@+id/textViewLivingRoom"
        android:layout_marginRight="194dp"
        android:layout_alignTop="@+id/textViewBedroom2"
        android:layout_alignRight="@+id/imageViewHouse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Cuisine"
        android:id="@+id/textViewKitchen"
        android:layout_marginRight="65dp"
        android:layout_marginTop="187dp"
        android:layout_below="@+id/textViewLivingRoom"
        android:layout_alignRight="@+id/imageViewHouse" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Chambre 1"
        android:id="@+id/textViewBedroom1"
        android:layout_marginTop="120dp"
        android:layout_below="@+id/textViewKitchen"
        android:layout_alignLeft="@+id/textViewBedroom2"
        android:layout_marginLeft="77dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="WC/SDB"
        android:id="@+id/textViewWC"
        android:layout_marginBottom="26dp"
        android:layout_above="@+id/textViewCorridor"
        android:layout_alignLeft="@+id/imageViewHouse"
        android:layout_marginLeft="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Couloir"
        android:id="@+id/textViewCorridor"
        android:layout_alignTop="@+id/textViewKitchen"
        android:layout_toRightOf="@+id/textViewBedroom1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/textViewLivingRoom"
        android:layout_alignTop="@+id/textViewBedroom1"
        android:layout_alignLeft="@+id/imageViewHouse"
        android:id="@+id/linearLayoutBedroom1"
        android:onClick="openConfigurationB1"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/imageViewHouse"
        android:layout_above="@+id/linearLayoutBedroom1"
        android:layout_alignRight="@+id/textViewBedroom2"
        android:layout_alignTop="@+id/textViewWC"
        android:id="@+id/linearLayoutWC"
        android:onClick="openConfigurationWC"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@+id/textViewWC"
        android:layout_alignLeft="@+id/textViewCorridor"
        android:layout_alignRight="@+id/imageViewHouse"
        android:id="@+id/linearLayoutLivingroom"
        android:onClick="openConfigurationL"></LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textView"
        android:layout_alignLeft="@+id/textViewWC"
        android:layout_above="@+id/textViewWC"
        android:layout_alignRight="@+id/textViewBedroom1"
        android:id="@+id/linearLayoutBedroom2"
        android:onClick="openConfigurationB2"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignLeft="@+id/textViewLivingRoom"
        android:layout_marginLeft="62dp"
        android:layout_below="@+id/linearLayoutLivingroom"
        android:layout_alignBottom="@+id/textViewBedroom1"
        android:id="@+id/linearLayoutKitchen"
        android:layout_alignRight="@+id/imageViewHouse"
        android:onClick="openConfigurationK"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/textViewWC"
        android:layout_alignLeft="@+id/textViewBedroom1"
        android:layout_above="@+id/linearLayoutBedroom1"
        android:layout_alignRight="@+id/textViewLivingRoom"
        android:id="@+id/linearLayoutCorridor"
        android:onClick="openConfigurationC"></LinearLayout>


</RelativeLayout>
