<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true" >
        <shape>
            <gradient
                android:startColor="@color/LightSlateGray"
                android:endColor="@color/LightSlateGray"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/PaleTurquoise" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/MediumTurquoise"
                android:endColor="@color/DodgerBlue"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/PaleTurquoise" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>